<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/suggestion_carte_repas_1"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="114dp" >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@android:color/holo_blue_light"
                                android:id="@+id/imageView3" />

                            <TextView
                                android:text="Des amis"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView6"
                                android:textSize="28sp"
                                android:layout_marginTop="65dp"
                                android:layout_marginLeft="15dp"
                                android:textStyle="normal|bold"
                                android:layout_marginBottom="10dp"
                                android:textColor="@android:color/white" />

                            <ImageView
                                app:srcCompat="@drawable/ic_delete_black_24dp"
                                android:id="@+id/imageView4"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="300dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="65dp"
                                android:visibility="invisible" />

                            <ImageView
                                app:srcCompat="@drawable/ic_create_black_24dp"
                                android:id="@+id/imageView11"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="265dp"
                                android:layout_marginTop="65dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:visibility="invisible" />

                            <ImageButton
                                app:srcCompat="@drawable/ic_add_black_24dp"
                                android:id="@+id/imageButton"
                                android:tint="@android:color/white"
                                android:background="#00000000"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="300dp"
                                android:layout_marginTop="65dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_place_black_24dp"
                                    android:id="@+id/imageView5"
                                    android:layout_marginLeft="8dp" />

                                <TextView
                                    android:text="RU Jussieu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:id="@+id/textView7"
                                    android:layout_weight="1"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/black"
                                    android:layout_marginLeft="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_event_black_24dp"
                                    android:id="@+id/imageView6"
                                    android:layout_marginLeft="8dp" />

                                <TextView
                                    android:text="Le 15/01/2017 Ã  12h20"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:id="@+id/textView8"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/icon_man_64dp"
                                    android:id="@+id/imageView10"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="8dp" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/icon_woman_64dp"
                                    android:id="@+id/imageView8"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/icon_woman_64dp"
                                    android:id="@+id/imageView9"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/icon_man_64dp"
                                    android:id="@+id/imageView7"
                                    android:layout_weight="1"
                                    android:layout_marginRight="250dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/suggestion_carte_repas_2"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="114dp" >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@android:color/holo_red_light" />

                            <TextView
                                android:text="Autre repas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="28sp"
                                android:layout_marginTop="65dp"
                                android:layout_marginLeft="15dp"
                                android:textStyle="normal|bold"
                                android:layout_marginBottom="10dp"
                                android:textColor="@android:color/white" />

                            <ImageView
                                app:srcCompat="@drawable/ic_delete_black_24dp"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="300dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="65dp"
                                android:visibility="invisible" />

                            <ImageView
                                app:srcCompat="@drawable/ic_create_black_24dp"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="265dp"
                                android:layout_marginTop="65dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:visibility="invisible" />

                            <ImageButton
                                app:srcCompat="@drawable/ic_add_black_24dp"
                                android:tint="@android:color/white"
                                android:background="#00000000"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="300dp"
                                android:layout_marginTop="65dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_place_black_24dp"
                                    android:layout_marginLeft="8dp" />

                                <TextView
                                    android:text="RU Jussieu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/black"
                                    android:layout_marginLeft="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_event_black_24dp"
                                    android:layout_marginLeft="8dp" />

                                <TextView
                                    android:text="Le 15/01/2017 Ã  12h20"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/icon_man_64dp"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="8dp" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/icon_woman_64dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/icon_woman_64dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/icon_man_64dp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="250dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="normal"
                    app:srcCompat="@drawable/ic_add_black_24dp"
                    android:id="@+id/floatingActionButton"
                    android:layout_gravity="bottom|right"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>